<h1><%= @task.title %></h1>

<p><%= @task.details %></p>

<p>This task is <%= @status %></p>

<p><%= link_to 'Edit task', edit_task_path %></p>
<p>
  <%= link_to 'Delete task',
       task_path(@task),
       method: :delete,
       data: { confirm: "Are you sure?" } %>
</p>
<p><%= link_to 'Back to all tasks', tasks_path %></p>
